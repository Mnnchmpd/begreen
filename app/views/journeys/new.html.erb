<div class="background-new" style="background-image: url(<%= image_path 'f.jpg'%>)">
  <div class="container">
    <h1 class="text-center-article">
     Add your travel to your profile ! </h1>
      <div class="col-md-8">
        <div class="form-where-we-go autocomplete-form">
        <%= simple_form_for @journey do |f| %>
        <h4>
          <%= f.input :starting_point, label:false, placeholder: "Start" %>
          <%= f.input :ending_point, label:false, placeholder: "End" %>
          <%= f.input :travel_mode, label:false, collection: ["🚗 Car", "🚎 Public transportation", "🚲 Bicycle", "🚶‍♀️ Walk"], input_html: { class: 'select2' } %>

          <%= f.input :date, as: :string, label:false, required: false, input_html: { class: "datepicker" }, placeholder: 'Date' %>
              <%#= f.input :date, as: :string, required: false, placeholder: 'fin', input_html: {class: "datepicker"} %>

          <%= f.submit "Add", class: "btn btn-success"%>
        </h4>
        <% end %>

      </div>
     </div>

    </div>
  </div>
</div>


