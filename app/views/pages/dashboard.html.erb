  <!-- Ici la vue de l'historique des trajets  -->

   <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <% @current_user.journeys.each do |journey| %>
      <div class="card">
        <div class="card-header" id="headingOne">
          <h2 class="mb-0">
            <button class="btn btn-link button-link-journey" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <i class="fab fa-pagelines"></i>  <%= journey.created_at %>
            </button>
          </h2>
        </div>
        <div class="card-body">
          <!--  Ici les le dropdow -> historique des trajets avec point de départ et arrivé-->
          <div class= "starting-point-journey-historical">
            <i class="fas fa-circle starting-point"></i>
            <div class= "starting-point"> <%= journey.starting_point %></div>
             </div>
            <i class="fas fa-ellipsis-v way way"></i>
          <div class= "ending-point-journey-historical">
            <i class="fas fa-circle ending-point"></i>
            <div class= "ending-point"><%= journey.ending_point %></div>
          </div>
        </div>
      </div>
    <% end %>

  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="accordion" id="accordionJourney">
      <% @user.journeys.each do |journey| %>
        <%= render "shared/card", journey: journey %>
      <% end %>
    </div>
  </div>



  <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
    <canvas id="lineChart" width="200" height="250"></canvas>
  </div>
</div>

















