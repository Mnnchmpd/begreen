 <div class="form-where-we-go">
    <h3>Where ? </h3>
            <%= simple_form_for @result, url: results_path, method: :get do |f| %>
            <%= f.input :starting_point, label: false, placeholder: "start"  %>
            <%= f.input :ending_point, label: false, placeholder: "end" %>
    <div class="form-group">
        <h3> When ?</h3>
          <select class="form-control" id="exampleFormControlSelect1">
            <option>Now</option>
            <option>In 30 minutes</option>
            <option>In an hour ?</option>
            <option>Tomorrow</option>
            </select>
          <div class="btn btn-outline-success my-2 my-sm-0 " >
              <%= f.submit "let's go" %>
